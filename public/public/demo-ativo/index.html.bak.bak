            }
            
            window.addEventListener('resize', checkScreenSize);
            checkScreenSize();
        }

        // InicializaÃ§Ã£o
        document.addEventListener('DOMContentLoaded', function() {
            // ConfiguraÃ§Ãµes iniciais
            setupSmoothScroll();
