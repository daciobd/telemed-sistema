    <script>
        // AnimaÃ§Ã£o de scroll
        function animateOnScroll() {
            const elements = document.querySelectorAll('.fade-in');
            elements.forEach(element => {
                const elementTop = element.getBoundingClientRect().top;
                const elementVisible = 150;
                
                if (elementTop < window.innerHeight - elementVisible) {
                    element.classList.add('visible');
                }
            });
        }

        // AnimaÃ§Ã£o de nÃºmeros
        function animateNumbers() {
            const numbers = document.querySelectorAll('.stat-number');
            numbers.forEach(number => {
                const target = parseInt(number.getAttribute('data-target'));
                const increment = target / 100;
                let current = 0;

                const timer = setInterval(() => {
                    current += increment;
                    if (current >= target) {
                        current = target;
                        clearInterval(timer);
                    }
                    
                    if (target >= 1000) {
                        number.textContent = Math.floor(current).toLocaleString();
                    } else {
                        number.textContent = Math.floor(current);
                    }
                }, 20);
            });
        }

        // Smooth scroll para links internos
        function setupSmoothScroll() {
            const links = document.querySelectorAll('a[href^="#"]');
            links.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                });
            });
        }

        // Header transparente no scroll
        function setupHeaderScroll() {
            const header = document.querySelector('.header');
            window.addEventListener('scroll', () => {
                if (window.scrollY > 100) {
                    header.style.background = 'rgba(255, 255, 255, 0.98)';
                    header.style.boxShadow = '0 2px 20px rgba(0, 0, 0, 0.15)';
                } else {
                    header.style.background = 'rgba(255, 255, 255, 0.95)';
                    header.style.boxShadow = '0 2px 20px rgba(0, 0, 0, 0.1)';
                }
            });
        }

        // Efeitos de hover nos cards
        function setupCardEffects() {
            const cards = document.querySelectorAll('.feature-card, .demo-card');
            cards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-15px) scale(1.02)';
                });
                
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0) scale(1)';
                });
            });
        }

        // Sistema de notificaÃ§Ãµes
        function showNotification(message, type = 'info') {
            const notification = document.createElement('div');
            notification.style.cssText = `
                position: fixed;
                top: 80px;
                right: 20px;
                padding: 15px 25px;
                border-radius: 10px;
                color: white;
                font-weight: bold;
                z-index: 3000;
                animation: slideIn 0.3s ease;
                max-width: 300px;
                box-shadow: 0 10px 25px rgba(0,0,0,0.2);
            `;
            
            switch(type) {
                case 'success':
                    notification.style.background = 'linear-gradient(135deg, #2ecc71, #27ae60)';
                    break;
                case 'info':
                    notification.style.background = 'linear-gradient(135deg, #3498db, #2980b9)';
                    break;
            }
            
            notification.textContent = message;
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.style.animation = 'slideOut 0.3s ease';
                setTimeout(() => {
                    if (document.body.contains(notification)) {
                        document.body.removeChild(notification);
                    }
                }, 300);
            }, 4000);
        }

        // Tracker de cliques nos botÃµes demo
        function trackDemoClicks() {
            const demoButtons = document.querySelectorAll('a[href*="demo-ativo"]');
            demoButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const destination = this.getAttribute('href').split('/').pop();
                    showNotification(`ð Redirecionando para ${destination}...`, 'info');
                });
            });
        }

        // Parallax suave no hero
        function setupParallax() {
            window.addEventListener('scroll', () => {
                const scrolled = window.pageYOffset;
                const hero = document.querySelector('.hero');
                if (hero) {
                    hero.style.transform = `translateY(${scrolled * 0.3}px)`;
                }
            });
        }

        // Verificar se o sistema demo estÃ¡ acessÃ­vel
        function checkDemoAvailability() {
            fetch('/public/demo-ativo/area-medica.html')
                .then(response => {
                    if (response.ok) {
                        console.log('â Sistema demo disponÃ­vel');
                    } else {
                        console.warn('â ï¸ Sistema demo pode nÃ£o estar disponÃ­vel');
                    }
                })
                .catch(error => {
                    console.warn('â ï¸ Erro ao verificar demo:', error);
                });
        }

        // Adicionar animaÃ§Ãµes CSS extras
        function addExtraStyles() {
            const style = document.createElement('style');
            style.textContent = `
                @keyframes slideIn {
                    from {
                        transform: translateX(100%);
                        opacity: 0;
                    }
                    to {
                        transform: translateX(0);
                        opacity: 1;
                    }
                }
                
                @keyframes slideOut {
                    from {
                        transform: translateX(0);
                        opacity: 1;
                    }
                    to {
                        transform: translateX(100%);
                        opacity: 0;
                    }
                }

                .hero-visual {
                    animation: floatIn 1s ease 0.5s both;
                }

                @keyframes floatIn {
                    from {
                        opacity: 0;
                        transform: translateY(50px) scale(0.8);
                    }
                    to {
                        opacity: 1;
                        transform: translateY(0) scale(1);
                    }
                }

                .stat-number {
                    transition: all 0.3s ease;
                }

                .stat-item:hover .stat-number {
                    transform: scale(1.1);
                    color: #f1c40f;
                }

                .feature-card:nth-child(odd) {
                    animation-delay: 0.1s;
                }

                .feature-card:nth-child(even) {
                    animation-delay: 0.2s;
                }

                /* Loading states */
                .loading {
                    opacity: 0.7;
                    pointer-events: none;
                }

                /* Hover effects melhorados */
                .btn-primary:hover {
                    box-shadow: 0 15px 35px rgba(231, 76, 60, 0.4);
                    transform: translateY(-3px) scale(1.05);
                }

                .btn-secondary:hover {
                    box-shadow: 0 15px 35px rgba(255, 255, 255, 0.3);
                    transform: translateY(-3px) scale(1.05);
                }
            `;
            document.head.appendChild(style);
        }

        // Menu mobile (para futuras implementaÃ§Ãµes)
        function setupMobileMenu() {
            // Funcionalidade de menu mobile pode ser adicionada aqui
            const mobileWidth = 768;
            
