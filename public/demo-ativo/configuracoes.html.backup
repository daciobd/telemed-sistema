    <script>
    // Navega√ß√£o entre se√ß√µes
    function showSection(sectionName) {
    // Ocultar todas as se√ß√µes
    const sections = document.querySelectorAll('.content-section');
    sections.forEach(section => section.classList.remove('active'));

    // Remover classe ativa dos links
    const navLinks = document.querySelectorAll('.nav-link');
    navLinks.forEach(link => link.classList.remove('active'));

    // Mostrar se√ß√£o selecionada
    document.getElementById(sectionName).classList.add('active');

    // Ativar link correspondente
    event.target.classList.add('active');
    }

    // Salvar todas as configura√ß√µes
    function saveAllSettings() {
    // Simular salvamento
    const button = document.querySelector('.save-all-btn');
    const originalText = button.innerHTML;

    button.innerHTML = '<i class="fas fa-spinner rotate"></i> Salvando...';
    button.disabled = true;

    setTimeout(() => {
    button.innerHTML = originalText;
    button.disabled = false;
    showNotification('‚úÖ Backup criado com sucesso!', 'success');
    }, 5000);
    }

    // Testar backup
    function testBackup() {
    showNotification('üß™ Iniciando teste de backup...', 'info');
    setTimeout(() => {
    showNotification('‚úÖ Teste de backup conclu√≠do com sucesso!', 'success');
    }, 3000);
    }

