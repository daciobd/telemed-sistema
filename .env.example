# Next.js Environment Variables
# Copy this file to .env.local and fill in your values

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3001
NEXTAUTH_URL=http://localhost:3001

# Authentication
NEXTAUTH_SECRET=your-secret-key-here

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/telemed_production

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# MEMED Integration (Digital Prescriptions)
MEMED_API_KEY=your-memed-api-key
MEMED_API_URL=https://api.memed.com.br

# WhatsApp Integration
WHATSAPP_API_KEY=your-whatsapp-api-key
WHATSAPP_PHONE_NUMBER=your-whatsapp-phone-number

# Feature Flags
FEATURE_AI_ASSISTANT=true
FEATURE_VIDEO_CALLS=true
FEATURE_PAYMENTS=true
FEATURE_PRESCRIPTIONS=true

# Analytics and Monitoring
NEXT_PUBLIC_ENABLE_ANALYTICS=false
VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# Environment
NODE_ENV=development

# Security
CORS_ORIGIN=http://localhost:3001

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Upload
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx