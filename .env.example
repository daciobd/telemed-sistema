# ===========================================
# TeleMed Sistema - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# ESSENTIAL - Required to run the system
# ===========================================

# Database Configuration (PostgreSQL/Neon)
DATABASE_URL="postgresql://user:password@host:5432/database"

# Session Security (Generate a strong random string)
SESSION_SECRET="generate-a-strong-random-secret-key-here"

# Server Configuration
PORT=5000
NODE_ENV=development

# ===========================================
# PAYMENT PROCESSING - For consultation billing
# ===========================================

# Stripe Integration (Get from https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"

# ===========================================
# COMMUNICATION - For notifications
# ===========================================

# WhatsApp Business API (Meta for Developers)
WHATSAPP_ACCESS_TOKEN="your_whatsapp_access_token"
WHATSAPP_PHONE_NUMBER_ID="your_phone_number_id"

# ===========================================
# MONITORING - Optional external monitoring
# ===========================================

# Slack Integration (Create app at api.slack.com)
SLACK_BOT_TOKEN="xoxb-your-slack-bot-token"
SLACK_CHANNEL="#alerts"

# Telegram Bot (Create bot with @BotFather)
TELEGRAM_BOT_TOKEN="123456789:your-telegram-bot-token"
TELEGRAM_CHAT_ID="your-chat-id"

# External Monitoring Services
UPTIMEROBOT_API_KEY="your-uptimerobot-api-key"
STATUSCAKE_API_KEY="your-statuscake-api-key"

# ===========================================
# MEDICAL INTEGRATION - Optional
# ===========================================

# MEMED API for digital prescriptions (https://memed.com.br)
MEMED_API_KEY="your_memed_api_key"
MEMED_ENVIRONMENT="sandbox" # or "production"

# ===========================================
# DEVELOPMENT ONLY
# ===========================================

# Enable debug logging
DEBUG=false

# Development database (if different from production)
DEV_DATABASE_URL="postgresql://localhost:5432/telemed_dev"