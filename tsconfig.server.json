{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/server",
    "noEmit": false,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "server/index.ts",
    "server/routes.ts",
    "server/storage.ts",
    "server/db.ts",
    "server/auth.ts",
    "server/vite.ts",
    "server/routes/*.ts",
    "server/security/*.ts",
    "server/monitoring/*.ts",
    "shared/**/*.ts"
  ],
  "exclude": [
    "client/**/*",
    "node_modules",
    "dist",
    "server/**/*.backup.ts",
    "server/**/*-broken.ts",
    "server/**/*-fixed.ts",
    "server/**/*-prod.ts",
    "server/**/*-port3000.ts",
    "server/**/*.production.ts",
    "server/test-simple.js"
  ]
}